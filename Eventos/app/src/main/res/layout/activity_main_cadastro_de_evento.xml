<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText android:id="@+id/activity_cadastro_evento_nome_do_evento"
        android:layout_width="match_parent"
        android:inputType="textCapWords"
        android:layout_marginTop="8dp"
        android:hint="Nome do Evento"
        android:layout_height="wrap_content"/>

    <EditText android:id="@+id/activity_cadastro_evento_data_do_evento"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:inputType="date"
        android:hint="Data do Evento"
        android:layout_height="wrap_content"/>

    <EditText android:id="@+id/activity_cadastro_evento_local_do_evento"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:inputType="text"
        android:hint="Local do Evento"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Locais" />

    <Spinner
        android:id="@+id/spinner_locais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/activity_cadastro_evento_btn_salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClickSalvar"
        android:text="Salvar" />

    <Button
        android:id="@+id/activity_cadastro_evento_btn_editar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClickDeletarEvento"
        android:text="Deletar" />

    <Button
        android:id="@+id/activity_cadastro_evento_btn_excluir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClickVoltar"
        android:text="Voltar" />


</LinearLayout>